@model IEnumerable<Entidades.Parceiro>

@{
    ViewBag.Title = "Listagem de parceiros";
}

<h2>Mostrando todos os parceiros</h2>

<p>
    @Html.ActionLink("Cadastrar novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nomeStr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imagemStr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AtivoBool)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCadastroBr)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nomeStr)
        </td>
        <td>
            <a href="/Validar/Parceiro/@item.idParceiro">
                <img width="200" height="200" src="~/Content/images/parceiros/@item.imagemStr" />
            </a>
            @*@Html.DisplayFor(modelItem => item.imagemStr)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AtivoBool)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataCadastroBr)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idParceiro }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.idParceiro }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.idParceiro })
        </td>
    </tr>
}

</table>
